#include <iostream>
 
using namespace std;
 
int main(){
    int n, i;
    cin >> n;
 
    string words[100];
 
    for (i = 0; i < n; i++) {
        cin >> words[i];
 
 
    }
    for (i = 0; i < n; i++) {
        string word = words[i];
        if(word.length() > 10) {
            cout << word[0] << word.length() - 2 << word.back() << endl;
        } else {
            cout << word << endl;
        }
    }
    return 0;
}
